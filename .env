# ============================================
# Symfony - Environment Variables (BASE)
# ============================================
# This file is COMMITTED to Git and contains default values
#
# For local development secrets, create .env.local
# For production, create .env.prod and .env.prod.local
#
# Loading order:
#   1. .env (this file - always loaded)
#   2. .env.local (local overrides - not in Git)
#   3. .env.$APP_ENV (.env.prod for production)
#   4. .env.$APP_ENV.local (.env.prod.local for secrets)
# ============================================

###> symfony/framework-bundle ###
APP_ENV=dev
APP_DEBUG=1
# Override in .env.local or .env.prod.local with a strong secret
APP_SECRET=change-me-in-env-local
###< symfony/framework-bundle ###

###> doctrine/doctrine-bundle ###
POSTGRES_VERSION=16
POSTGRES_USER=app_user
POSTGRES_DB=pdf_search
POSTGRES_HOST=database
POSTGRES_PORT=5432
# Development default - override in .env.local for security
POSTGRES_PASSWORD=dev_password

DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?serverVersion=${POSTGRES_VERSION}&charset=utf8
###< doctrine/doctrine-bundle ###

###> symfony/messenger ###
# Development: use database transport
MESSENGER_TRANSPORT_DSN=doctrine://default?auto_setup=0
###< symfony/messenger ###

###> symfony/mailer ###
MAILER_DSN=null://null
###< symfony/mailer ###

###> Elasticsearch ###
# Development: no authentication
ELASTICSEARCH_HOST=http://elasticsearch:9200
ELASTICSEARCH_INDEX_PDFS=pdf_pages
# Production: set ELASTIC_PASSWORD in .env.prod.local
###< Elasticsearch ###

###> Ollama AI Models ###
OLLAMA_HOST=http://ollama:11434
# Translation model (qwen2.5:7b = 4.7GB, llama3.2:1b = 1.3GB)
OLLAMA_MODEL=qwen2.5:7b
# Embedding model for semantic search (274MB)
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
###< Ollama AI Models ###

###> symfony/routing ###
DEFAULT_URI=http://localhost
###< symfony/routing ###

###> Web Server ###
# Development: port 80
# Production: override to 8080 in .env.prod
APACHE_PORT=80
###< Web Server ###

###> Docker Build Args ###
USER_ID=1000
GROUP_ID=1000
###< Docker Build Args ###

###> Development Tools ###
# Xdebug mode: off, debug, coverage, profile
XDEBUG_MODE=off
###< Development Tools ###
